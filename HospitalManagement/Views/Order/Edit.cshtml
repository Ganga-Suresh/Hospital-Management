﻿@model HospitalManagement.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Update Order</h2>
<form action="/Order/Update/@Model.SelectedOrder.Order_id" method="POST">
    <div style="display:none;">
        @* Pass through the animal ID *@
        <input type="text" name="AnimalID" value="@Model.SelectedAnimal.AnimalID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="AnimalName" value="@Model.SelectedAnimal.AnimalName" />
    </div>
    <div>
        <label>Weight (kg):</label> <input type="number" name="AnimalWeight" value="@Model.SelectedAnimal.AnimalWeight" />
    </div>

    <div>
        <input type="submit" value="Update Order" />

    </div>
</form>

